<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mai_main_menu"
    tools:context=".Screens.Game.Story.PrePostTest">

    <!-- Dark overlay - added first to go to the back -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Main content layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <!-- Left Panel: Question Image and Text -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="16dp">

            <!-- Question Image -->
            <ImageView
                android:id="@+id/question_image"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/bg_food_factory"
                android:visibility="visible" />

            <!-- Question Text -->
            <TextView
                android:id="@+id/question_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question here"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"/>
        </LinearLayout>

        <!-- Right Panel: Choices Layout -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Choice 1 -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/choice_1_image"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/bg_food_factory"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/choice_1_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:text="Choice 1"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- Choice 2 -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/choice_2_image"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/bg_food_factory"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/choice_2_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:text="Choice 2"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- Choice 3 -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/choice_3_image"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/bg_food_factory"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/choice_3_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:text="Choice 3"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>
                </LinearLayout>

                <!-- Choice 4 -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/choice_4_image"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/bg_food_factory"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/choice_4_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:text="Choice 4"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
