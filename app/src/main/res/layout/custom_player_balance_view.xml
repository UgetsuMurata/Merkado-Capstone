<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/custom_m_coin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="4dp"
        android:src="@drawable/icon_coin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="@id/custom_m_coin"
        app:layout_constraintStart_toStartOf="@id/custom_m_coin"
        app:layout_constraintTop_toTopOf="@id/custom_m_coin">

        <TextView
            android:id="@+id/custom_m_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/elements"
            android:paddingStart="18dp"
            android:text="P 2000.00" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>