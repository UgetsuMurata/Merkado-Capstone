<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mai_main_menu"
    tools:context=".Screens.Economy.SettingsEconomy">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_quiz"
        android:layout_margin="40dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.03" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.98" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/board_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.02" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.13" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95" />

        <ImageView
            android:id="@+id/icon_settings_server"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_server_settings"
            app:layout_constraintBottom_toBottomOf="@id/create_server"
            app:layout_constraintTop_toTopOf="@id/create_server"
            app:layout_constraintStart_toStartOf="@id/start"
            app:layout_constraintEnd_toStartOf="@id/create_server"/>

        <TextView
            android:id="@+id/create_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/header"
            android:text="Server Settings"
            android:layout_marginStart="5dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/top"
            app:layout_constraintStart_toEndOf="@id/icon_settings_server"
            app:layout_constraintTop_toTopOf="@id/board_top" />

        <LinearLayout
            android:id="@+id/create_server_page1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@id/confirmation"
            app:layout_constraintEnd_toEndOf="@id/end"
            app:layout_constraintStart_toStartOf="@id/start"
            app:layout_constraintTop_toTopOf="@id/top">

            <ScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linear_factor_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/frame"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/sensitivity_factor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_sensitivity_factor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/elements"
                                android:text="Sensitivity Factor:"
                                android:layout_marginEnd="5dp"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/text_sensiv_fac_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/elements"
                                android:text="0.3"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/desc_sensitivity_factor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/elements"
                            android:text="@string/desc_sensiv_fac"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                        <SeekBar
                            android:id="@+id/factor_limit_seekbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="4"
                            android:min="1" />
                        <LinearLayout
                            android:id="@+id/frame_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/elements"
                                android:gravity="start"
                                android:text="0.01"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/elements"
                                android:gravity="end"
                                android:text="0.9"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/pre_post_test"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_prepro_test"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/elements"
                                android:text="Pre-Test and Post-Test"
                                android:layout_marginEnd="5dp"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <CheckBox
                                android:id="@+id/checkBox"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/desc_prepo_test"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/elements"
                            android:text="@string/desc_prepo_test"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/desc1_prepo_test"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/elements"
                            android:text="@string/desc1_prepo_test"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/gray"
                            android:textSize="10sp"
                            android:textStyle="italic" />
                        <LinearLayout
                            android:id="@+id/remove_bots"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_remove_bots"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/elements"
                                android:text="Bot Removal:"
                                android:layout_marginEnd="5dp"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/text_remove_bots_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/elements"
                                android:text="20%"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/desc_bot_remove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/elements"
                            android:text="@string/desc_bot_removal"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold" />
                        <SeekBar
                            android:id="@+id/bot_seek_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="5"
                            android:min="1" />
                        <LinearLayout
                            android:id="@+id/frame_percentage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/elements"
                                android:gravity="start"
                                android:text="10%"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/elements"
                                android:gravity="center"
                                android:text="20%"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/elements"
                                android:gravity="center"
                                android:text="30%"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/elements"
                                android:gravity="end"
                                android:text="40%"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/elements"
                                android:gravity="end"
                                android:text="50%"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="15dp"
                            android:background="#c0c0c0"/>
                        
                        <LinearLayout
                            android:id="@+id/term_conditions_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">
                            
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Terms and Conditions"
                                android:textStyle="bold"
                                android:fontFamily="@font/elements"
                                android:layout_gravity="start"/>

                            <TextView
                                android:id="@+id/read_button"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Read"
                                android:fontFamily="@font/elements"
                                android:gravity="end"
                                android:textStyle="bold"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/server_id_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/subserver_id_layout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Server ID:"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/elements"/>

                                <TextView
                                    android:id="@+id/server_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="123456"
                                    android:fontFamily="@font/elements"
                                  />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/server_id_button"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_copy"
                                android:gravity="end"
                              />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/server_key_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/subserver_key_layout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Server Key:"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/elements"/>

                                <TextView
                                    android:id="@+id/server_key"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="*****"
                                    android:fontFamily="@font/elements"
                                    />
                                <ImageView
                                    android:id="@+id/view_key"
                                    android:layout_width="20dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:src="@drawable/icon_eye"
                                    android:gravity="start"
                                    />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/server_key_copy"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_copy"
                                android:gravity="end"
                                />

                        </LinearLayout>
                            
                    </LinearLayout>
                </LinearLayout>

            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/confirmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/bottom"
            app:layout_constraintEnd_toEndOf="@id/end"
            app:layout_constraintStart_toStartOf="@id/start"
            app:layout_constraintTop_toBottomOf="@id/create_server_page1">

            <TextView
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/elements"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="@string/cancel"
                android:textColor="@color/black" />

            <com.capstone.merkado.CustomViews.WoodenButton
                android:id="@+id/create_server_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:primaryOrSecondary="primary"
                android:layout_marginStart="20dp"
                app:buttonText="@string/create_server_header" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>