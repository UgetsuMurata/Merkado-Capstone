<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mai_main_menu"
    android:padding="10dp"
    tools:context=".Screens.Game.MainMap">

    <!--TOP UI-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_ui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.capstone.merkado.CustomViews.PlayerLevelView
            android:id="@+id/player_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.capstone.merkado.CustomViews.PlayerBalanceView
            android:id="@+id/player_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            app:layout_constraintBottom_toBottomOf="@id/player_level"
            app:layout_constraintStart_toEndOf="@id/player_level"
            app:layout_constraintTop_toTopOf="@id/player_level" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--HOUSE ICON-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/house_icon_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/house_icon_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".7" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/house_icon_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".4" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/map_house"
            android:src="@drawable/icon_house"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/house_icon_end"
            app:layout_constraintStart_toStartOf="@id/house_icon_start"
            app:layout_constraintTop_toTopOf="@id/house_icon_top" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/factory_icon_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".75" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/factory_icon_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".60" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/factory_icon_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".25" />

            <ImageView
                android:id="@+id/my_factory"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/map_factory"
                android:src="@drawable/icon_factory_closed"
                app:layout_constraintBottom_toBottomOf="@id/factory_icon_bottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/factory_icon_start"
                app:layout_constraintTop_toTopOf="@id/factory_icon_top" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/store_icon_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent=".05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/store_icon_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent=".3" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/store_icon_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent=".4" />

                <ImageView
                    android:id="@+id/my_store"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@string/map_store"
                    android:src="@drawable/icon_store_closed"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/store_icon_end"
                    app:layout_constraintStart_toStartOf="@id/store_icon_start"
                    app:layout_constraintTop_toTopOf="@id/store_icon_top" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--BOTTOM NAVIGATION BUTTONS-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_navigation_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/inventory_nav"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="999dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/quests_and_stories_nav"
            app:strokeColor="@color/merkado_orange"
            app:strokeWidth="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:contentDescription="@string/inventory_icon"
                android:src="@drawable/icon_inventory" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/quests_and_stories_nav"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="999dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/factories"
            app:strokeColor="@color/merkado_orange"
            app:strokeWidth="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:contentDescription="@string/qas_icon"
                android:src="@drawable/icon_book" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/factories"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="999dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/store_nav"
            app:strokeColor="@color/merkado_orange"
            app:strokeWidth="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:contentDescription="@string/factory_icon"
                android:src="@drawable/icon_factory" />
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/store_nav"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/store_icon"
            android:src="@drawable/gui_gamemap_stores_idle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--POP UPS-->
    <include
        android:id="@+id/layout_open_store_popup"
        layout="@layout/layout_open_store_popup"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:elevation="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/layout_open_factory_popup"
        layout="@layout/layout_open_factory_popup"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:elevation="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>